<div class="mdl-grid">
  <% @books.each do |book| %>
    <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--3-col">
      <div class="mdl-card__media mdl-card__media--portrait">
        <% unless book.cover.nil? %>
          <%= link_to image_tag(book.cover), book.link, target: '_blank' %>
        <% else %>
          <%= link_to 'No image available. But you can click here to view details.', book.link, target: '_blank' %>
        <% end %>
      </div>
      <div class="mdl-card__title mdl-card--expand">
        <h2 class="mdl-card__title-text"><%= book.title %></h2>
      </div>
      <div class="mdl-card__supporting-text">
        <%= book.authors %>
      </div>
    </div>
  <% end %>
</div>
